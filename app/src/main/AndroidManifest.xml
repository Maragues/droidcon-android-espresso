<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.xrigau.droidcon.espresso"
  android:versionCode="1"
  android:versionName="1.0">

  <uses-sdk
    android:minSdkVersion="14"
    android:targetSdkVersion="19" />

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:theme="@style/EspressoDemoTheme"
    android:icon="@drawable/ic_launcher">
    <activity
      android:name=".presentation.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".presentation.VisitorActivity"
      android:label="@string/app_name" />

    <activity
      android:name=".presentation.PostListActivity"
      android:label="@string/post_list_title" />

    <activity
      android:name=".presentation.IdlingResourceActivity"
      android:label="@string/activity_idling_resource_title" />
  </application>

</manifest>
